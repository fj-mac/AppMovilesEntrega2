<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAhora"
    android:orientation="vertical">


    <TextView
        android:id="@+id/calidadDeAireActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La calidad de aire actual en este parque es de: " />
    <TextView
        android:id="@+id/comentarioCalidadAire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lo anterior quiere decir que con la calidad de aire en este nivel puede llegar a ser peligroso para personas con xyz" />

    <TextView
        android:id="@+id/seguridadActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La seguridad actual en el parque es de: " />


</LinearLayout>